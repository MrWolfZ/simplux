{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "composite": true,
    "incremental": true,
    "inlineSources": false,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/testdata.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.js"
  ]
}
