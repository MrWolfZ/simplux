{
  "name": "@simplux/platform",
  "scripts": {
    "build": "lerna run build --no-bail --stream --ignore @simplux/recipes.*",
    "build:ci": "lerna run build:ci --no-bail --stream --ignore @simplux/recipes.*",
    "build:composite": "tsc -b tsconfig.composite.build.json tsconfig.composite.test.json tsconfig.composite.recipes.json",
    "build:watch": "tsc -b tsconfig.composite.build.json tsconfig.composite.test.json tsconfig.composite.recipes.json -w",
    "lint": "lerna run lint --no-bail --parallel --ignore @simplux/recipes.*",
    "lint:ci": "lerna run lint:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "test": "lerna run test --no-bail --parallel --ignore @simplux/recipes.*",
    "test:ci": "lerna run test:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "report-coverage": "lerna run report-coverage --no-bail --parallel=false --ignore @simplux/recipes.*",
    "prepare-release": "npm run build && npm run lint && npm run test && lerna version --conventional-commits --conventional-graduate=* --yes --exact --force-publish=* && npm run build",
    "publish-release": "lerna run publish:custom --no-bail --parallel -- -- --otp",
    "prepare-prerelease": "npm run build && npm run test && lerna version --conventional-commits --conventional-prerelease=* --yes --exact --force-publish=* && npm run build",
    "publish-prerelease": "lerna run publish:custom --no-bail --parallel -- -- --tag next --otp",
    "precommit": "node ./scripts/pre-commit-hook.js",
    "build:config": "tsc -p ./tsconfig.config.json",
    "lerna:bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run lerna:bootstrap",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWolfZ/simplux.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "redux",
    "react",
    "immer",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.0",
    "@angular/cli": "^12.0.0",
    "@angular/common": "^12.0.0",
    "@angular/compiler": "^12.0.0",
    "@angular/compiler-cli": "^12.0.0",
    "@angular/core": "^12.0.0",
    "@angular/language-service": "^12.0.0",
    "@angular/platform-browser": "^12.0.0",
    "@angular/platform-browser-dynamic": "^12.0.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@hot-loader/react-dom": "^16.14.0",
    "@microsoft/api-extractor": "^7.18.19",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/enzyme": "^3.9.3",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jasmine": "^3.10.2",
    "@types/jasminewd2": "^2.0.10",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.21",
    "@types/pretty-time": "^1.1.1",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-test-renderer": "^16.9.4",
    "@types/shelljs": "^0.8.9",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.16.3",
    "acorn": "^8.6.0",
    "codecov": "^3.8.3",
    "core-js": "^3.19.1",
    "glob": "^7.2.0",
    "husky": "^4.3.8",
    "immer": "^9.0.6",
    "jest": "^27.3.1",
    "jest-silent-reporter": "^0.5.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-time": "^1.1.0",
    "react": "^16.14.0",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^16.14.0",
    "react-hot-loader": "^4.13.0",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^16.14.0",
    "redux": "^4.1.2",
    "redux-devtools-extension": "^2.13.9",
    "rollup": "^2.60.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rxjs": "^6.6.3",
    "shelljs": "^0.8.4",
    "sorcery": "^0.10.0",
    "staged-git-files": "^1.2.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsd": "^0.18.0",
    "tslib": "^2.3.1",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "~4.2.3",
    "uglifyjs": "^2.4.11",
    "yargs": "^16.2.0",
    "zone.js": "~0.11.4"
  }
}
