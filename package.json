{
  "name": "@simplux/platform",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "build": "npm run build:core && npm run build:selectors && npm run build:immer && npm run build:react",
    "build:core": "node build.lib.js ./packages/core",
    "build:selectors": "node build.lib.js ./packages/selectors",
    "build:immer": "node build.lib.js ./packages/immer",
    "build:react": "node build.lib.js ./packages/react",
    "lint": "npm run lint:core && npm run lint:selectors && npm run lint:immer && npm run lint:react",
    "lint:core": "tslint -c tslint.json -p ./packages/core/tsconfig.json --fix",
    "lint:selectors": "tslint -c tslint.json -p ./packages/selectors/tsconfig.json --fix",
    "lint:immer": "tslint -c tslint.json -p ./packages/immer/tsconfig.json --fix",
    "lint:react": "tslint -c tslint.json -p ./packages/react/tsconfig.json --fix",
    "test": "npm run test:core && npm run test:selectors && npm run test:immer && npm run test:react",
    "test:core": "jest --config=packages/core/jest.config.js --forceExit --verbose --detectOpenHandles",
    "test:selectors": "jest --config=packages/selectors/jest.config.js --forceExit --verbose --detectOpenHandles",
    "test:immer": "jest --config=packages/immer/jest.config.js --forceExit --verbose --detectOpenHandles",
    "test:react": "jest --config=packages/react/jest.config.js --forceExit --verbose --detectOpenHandles",
    "test-changed-since-master": "npm run test:core -- --changedSince=master && npm run test:selectors -- --changedSince=master && npm run test:immer -- --changedSince=master && npm run test:react -- --changedSince=master",
    "build:config": "tsc -p ./tsconfig.config.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-changed-since-master"
    }
  },
  "keywords": [
    "redux",
    "react",
    "immer",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.11",
    "@types/pretty-time": "^1.1.0",
    "@types/react": "^16.8.14",
    "@types/react-burger-menu": "^2.2.4",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.2",
    "@types/shelljs": "^0.8.5",
    "@types/styled-components": "^4.1.14",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.13.9",
    "glob": "^7.1.4",
    "husky": "^2.3.0",
    "immer": "^3.1.2",
    "jest": "^24.7.1",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^1.17.1",
    "pretty-time": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.5.0",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "rollup": "^1.11.3",
    "rollup-plugin-node-resolve": "^4.2.4",
    "shelljs": "^0.8.3",
    "sorcery": "^0.10.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4",
    "uglifyjs": "^2.4.11"
  }
}
