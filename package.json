{
  "name": "@simplux/platform",
  "scripts": {
    "build": "lerna run build --no-bail --ignore @simplux/recipes.*",
    "build:ci": "lerna run build:ci --no-bail --ignore @simplux/recipes.*",
    "lint": "lerna run lint --no-bail --parallel --ignore @simplux/recipes.*",
    "lint:ci": "lerna run lint:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "validate-types": "lerna run validate-types --stream --concurrency 1 --no-sort --no-bail --ignore @simplux/recipes.*",
    "validate-types:ci": "lerna run validate-types --stream --concurrency 1 --no-sort --no-bail --ignore @simplux/recipes.*",
    "test": "lerna run test --no-bail --parallel --ignore @simplux/recipes.*",
    "test:ci": "lerna run test:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "report-coverage": "lerna run report-coverage --no-bail --parallel=false --ignore @simplux/recipes.*",
    "prepare-release": "npm run build && npm run lint && npm run test && npm run validate-types && lerna version --conventional-commits --conventional-graduate=* --yes --exact --force-publish=* && npm run build",
    "publish-release": "lerna run publish:custom --no-bail --parallel -- -- --otp",
    "prepare-prerelease": "npm run build && npm run test && npm run validate-types && lerna version --conventional-commits --conventional-prerelease=* --yes --exact --force-publish=* && npm run build",
    "publish-prerelease": "lerna run publish:custom --no-bail --parallel -- -- --tag next --otp",
    "precommit": "node ./scripts/pre-commit-hook.js",
    "build:config": "tsc -p ./tsconfig.config.json",
    "lerna:bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run lerna:bootstrap",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWolfZ/simplux.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "redux",
    "react",
    "immer",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "dependencies": {
    "@simplux/angular": "0.16.0",
    "@simplux/core": "0.16.0",
    "@simplux/react": "0.16.0",
    "@simplux/testing": "0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.7",
    "@angular/cli": "^10.2.1",
    "@angular/common": "^10.2.4",
    "@angular/compiler": "^10.2.4",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@hot-loader/react-dom": "^16.14.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/pretty-time": "^1.1.0",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-redux": "^7.1.12",
    "@types/react-router-dom": "^4.3.5",
    "@types/react-test-renderer": "^16.9.4",
    "@types/shelljs": "^0.8.8",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.16.0",
    "acorn": "^8.0.4",
    "codecov": "^3.8.1",
    "core-js": "^3.8.1",
    "glob": "^7.1.6",
    "husky": "^4.3.6",
    "immer": "^7.0.15",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-time": "^1.1.0",
    "react": "^16.14.0",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^16.14.0",
    "react-hot-loader": "^4.13.0",
    "react-scripts": "^3.4.4",
    "react-test-renderer": "^16.14.0",
    "redux": "^4.0.5",
    "rollup": "^2.35.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rxjs": "^6.6.3",
    "shelljs": "^0.8.4",
    "sorcery": "^0.10.0",
    "staged-git-files": "^1.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsd": "^0.14.0",
    "tslib": "^2.0.3",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.0",
    "uglifyjs": "^2.4.11",
    "yargs": "^16.2.0",
    "zone.js": "~0.10.3"
  }
}
