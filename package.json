{
  "name": "@simplux/platform",
  "scripts": {
    "build": "lerna run build --no-bail --ignore @simplux/recipes.*",
    "build:ci": "lerna run build:ci --no-bail --ignore @simplux/recipes.*",
    "lint": "lerna run lint --no-bail --parallel --ignore @simplux/recipes.*",
    "lint:ci": "lerna run lint:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "validate-types": "lerna run validate-types --stream --concurrency 1 --no-sort --no-bail --ignore @simplux/recipes.*",
    "validate-types:ci": "lerna run validate-types --stream --concurrency 1 --no-sort --no-bail --ignore @simplux/recipes.*",
    "test": "lerna run test --no-bail --parallel --ignore @simplux/recipes.*",
    "test:ci": "lerna run test:ci --no-bail --parallel --ignore @simplux/recipes.*",
    "report-coverage": "lerna run report-coverage --no-bail --parallel=false --ignore @simplux/recipes.*",
    "prepare-release": "npm run build && npm run lint && npm run test && lerna version --conventional-commits --conventional-graduate=* --yes --exact --force-publish=* && npm run build",
    "publish-release": "lerna run publish:custom --no-bail --parallel -- -- --otp",
    "prepare-prerelease": "npm run build && npm run test && lerna version --conventional-commits --conventional-prerelease=* --yes --exact --force-publish=* && npm run build",
    "publish-prerelease": "lerna run publish:custom --no-bail --parallel -- -- --tag next --otp",
    "precommit": "node ./scripts/pre-commit-hook.js",
    "build:config": "tsc -p ./tsconfig.config.json",
    "lerna:bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run lerna:bootstrap",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWolfZ/simplux.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "redux",
    "react",
    "immer",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "dependencies": {
    "@simplux/angular": "0.13.0",
    "@simplux/core": "0.13.0",
    "@simplux/react": "0.13.0",
    "@simplux/testing": "0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.4",
    "@angular/cli": "^9.1.1",
    "@angular/common": "^9.1.1",
    "@angular/compiler": "^9.1.1",
    "@angular/compiler-cli": "^9.1.1",
    "@angular/core": "^9.1.1",
    "@angular/language-service": "^9.1.1",
    "@angular/platform-browser": "^9.1.1",
    "@angular/platform-browser-dynamic": "^9.1.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hot-loader/react-dom": "^16.11.0",
    "@rollup/plugin-replace": "^2.3.1",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.12.17",
    "@types/pretty-time": "^1.1.0",
    "@types/react": "^16.8.6",
    "@types/react-burger-menu": "^2.2.4",
    "@types/react-dom": "^16.8.6",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.2",
    "@types/react-test-renderer": "^16.9.1",
    "@types/shelljs": "^0.8.5",
    "@types/styled-components": "^4.1.14",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.13.9",
    "acorn": "^7.1.1",
    "codecov": "^3.5.0",
    "core-js": "^3.1.4",
    "glob": "^7.1.4",
    "husky": "^2.3.0",
    "immer": "^5.0.0",
    "jest": "24.8.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "pretty-time": "^1.1.0",
    "react": "^16.8.6",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.5.1",
    "react-hot-loader": "^4.12.18",
    "react-scripts": "^3.0.1",
    "react-test-renderer": "^16.8.6",
    "redux": ">=4.0.0",
    "rollup": "^2.6.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rxjs": "^6.5.5",
    "shelljs": "^0.8.3",
    "sorcery": "^0.10.0",
    "staged-git-files": "^1.2.0",
    "ts-jest": "^24.0.2",
    "ts-node": "~7.0.0",
    "tsd": "^0.13.1",
    "tslib": "^1.11.1",
    "tslint": "^5.17.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.7.2",
    "uglifyjs": "^2.4.11",
    "yargs": "^13.2.4",
    "zone.js": "~0.10.3"
  }
}
