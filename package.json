{
  "name": "@simplux/platform",
  "scripts": {
    "build": "lerna run build --stream --no-bail",
    "build-ci": "lerna run build-ci --no-bail",
    "lint": "lerna run lint --stream --no-bail",
    "lint-ci": "lerna run lint-ci --no-bail",
    "test": "lerna run test --stream --no-bail",
    "test-ci": "lerna run test-ci --no-bail",
    "publish": "lerna version --conventional-commits --yes --exact",
    "postpublish": "lerna run publish",
    "precommit": "node ./scripts/pre-commit-hook.js",
    "build:config": "tsc -p ./tsconfig.config.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWolfZ/simplux.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "redux",
    "react",
    "immer",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.13",
    "@types/pretty-time": "^1.1.0",
    "@types/react": "^16.8.19",
    "@types/react-burger-menu": "^2.2.4",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.2",
    "@types/shelljs": "^0.8.5",
    "@types/styled-components": "^4.1.14",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.13.9",
    "glob": "^7.1.4",
    "husky": "^2.3.0",
    "immer": "^3.1.2",
    "jest": "^24.7.1",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1",
    "pretty-time": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.5.1",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "rollup": "^1.13.1",
    "rollup-plugin-node-resolve": "^4.2.4",
    "shelljs": "^0.8.3",
    "sorcery": "^0.10.0",
    "staged-git-files": "^1.2.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.1",
    "uglifyjs": "^2.4.11",
    "yargs": "^13.2.4"
  }
}
